# ===== FETCH ADJUSTED DATA FOR OTHER APP =====
@app.get("/fetch-adjusted")
def fetch_adjusted(username: str = Depends(authenticate)):
    try:
        conn = get_connection()
        cursor = conn.cursor()
        # Fetch only rows with fetch_status=0
        cursor.execute("SELECT * FROM EmployeeWorkAdjusted WHERE fetch_status=0")
        rows = cursor.fetchall()
        column_names = [c[0] for c in cursor.description]

        ids = [r[0] for r in rows]  # first column = id
        if ids:
            # Mark them as fetched successfully
            cursor.executemany("UPDATE EmployeeWorkAdjusted SET fetch_status=1 WHERE id=%s", [(i,) for i in ids])
            conn.commit()

        conn.close()
        return {"rows": [dict(zip(column_names, r)) for r in rows]}
    except Exception as e:
        return {"status": "error", "detail": str(e)}

